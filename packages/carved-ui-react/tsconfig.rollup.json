{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["src/lib"],
    "exclude": ["node_modules", "**/test.spec.tsx", "**/test.spec.ts"]
}
